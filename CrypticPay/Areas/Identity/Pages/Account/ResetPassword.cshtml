@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

    <center>

<h4> Reset Password </h4>
<div class="row">
    <div class="col s10 offset-s1 l6 offset-l3">
        <hr />
    </div>
</div>
<p>Reset your password.</p>


<div class="row">
    <div class="card horizontal hoverable col l4 s10 offset-l4 offset-s1" style="border-radius: 25px 25px 25px 25px">

        <div class="row card-content">
            <form id="resetPword" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Input.Code" type="hidden" />


                <div class="col s12 l12 input-field">
                    <label asp-for="Input.UserName"><i class="tiny material-icons">person_outline</i> Cryptic Tag</label>
                    <input asp-for="Input.UserName" type="text" class="form-control" />
                </div>

                <div class="col s12 l12 pword-field">
                    <label asp-for="Input.Password"><i class="tiny material-icons">lock_outline</i> Password</label>
                    <input id="pword" type="password" asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="col s12 l12 pword-field">
                    <label asp-for="Input.ConfirmPassword"><i class="tiny material-icons">lock</i> Confirm password</label>
                    <input id="pwordConfirm" type="password" asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col s6">
                        <input type="checkbox" class="filled-in checkbox-blue" onclick="showPassword()" id="show">
                        <label for="show">Show</label>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Reset</button>


            </form>
        </div>
    </div>
</div>
        </center>

<script src="~/js/registerManager.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
