@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Two-factor authentication";
}

<center>
    <h4> Verify Mobile </h4>
    <div class="row">
        <div class="col s10 offset-s1 l6 offset-l3">
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="card horizontal hoverable col l4 s10 offset-l4 offset-s1" style="border-radius: 25px 25px 25px 25px">

            <div class="row card-content">
                <form id="registerConfirm" method="post" asp-route-returnUrl="@Model.ReturnUrl">
                    <input asp-for="RememberMe" type="hidden" />
                    <input type="hidden" asp-for="IsSMS" />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="col s12 l12 input-field">
                        <label asp-for="Input.TwoFactorCode">Code</label>
                        <input type="text" asp-for="Input.TwoFactorCode" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Input.TwoFactorCode" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col s12">
                            <input type="checkbox" asp-for="Input.RememberMachine" class="filled-in checkbox-blue" id="remember">
                            <label for="remember" asp-for="Input.RememberMachine">Remember Machine</label>
                        </div>
                    </div>

                    <div class="col s12">
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</center>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
