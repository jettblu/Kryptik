@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CrypticPayCoins[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CrypticPayCoins[0].ApiTag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CrypticPayCoins[0].Ticker)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CrypticPayCoins[0].ThumbnailPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CrypticPayCoins[0].IsSupported)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CrypticPayCoins[0].DateCreated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CrypticPayCoins) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApiTag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ticker)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThumbnailPath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsSupported)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
